<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add New Image</h1>
    </div>
    <div style="width:300px; margin:30px auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter Name" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter Image Url" name="image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter Description" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<% include ../partials/footer %>